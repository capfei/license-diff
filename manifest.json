{
  "manifest_version": 3,
  "name": "LicenseDB Diff",
  "version": "0.0.0",
  "description": "Compare selected text with ScanCode LicenseDB.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "images/file-diff-16.png",
      "32": "images/file-diff-32.png",
      "48": "images/file-diff-48.png",
      "128": "images/file-diff-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "images/file-diff-16.png",
    "48": "images/file-diff-48.png",
    "128": "images/file-diff-128.png"
  }
}