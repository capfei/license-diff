{
  "manifest_version": 3,
  "name": "ScanCode LicenseDB Diff",
  "version": "0.0.0",
  "description": "Compare selected text with ScanCode LicenseDB.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://scancode-licensedb.aboutcode.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/file-diff-16.png",
      "32": "images/file-diff-32.png",
      "48": "images/file-diff-48.png",
      "128": "images/file-diff-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["diff_match_patch.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/file-diff-16.png",
    "48": "images/file-diff-48.png",
    "128": "images/file-diff-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["diff_match_patch.js"],
      "matches": ["<all_urls>"]
    }
  ]
}